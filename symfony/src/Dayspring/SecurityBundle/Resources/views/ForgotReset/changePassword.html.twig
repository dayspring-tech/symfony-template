{% extends "::base.html.twig" %}

{% block title %}Change Password{% endblock %}

{% block content %}
    <div class="row padding-bottom">
        <div class="col-md-4 col-md-offset-4">
            {% include "::sessionFlash.html.twig" %}

            <h1>Change Password</h1>

            <form method="post" class="form-horizontal col-xs-12" {{ form_enctype(form) }} novalidate="true" id="change-password-form">
                <div class="col-xs-12">
                    {{ form_rest(form) }}
                    <div class="form-group">
                        <div class="controls">
                            <input type="submit" value="Save" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}